<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edCategoryName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edCategorySoLuong"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="So luong"
                android:textSize="16sp"
                android:textStyle="bold"
                android:enabled="false"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonEditCategory"
                android:layout_width="64dp"
                android:layout_height="33dp"
                android:background="@drawable/button_border_success"
                android:textColor="@color/white"
                android:text="Sửa"
                android:textSize="10sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDeleteCategory"
                android:layout_width="64dp"
                android:layout_height="33dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_border_danger"
                android:textColor="@color/white"
                android:text="Xóa"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
